@page
@model CityBreaks.Agency.Pages.CreateClienteModel
@{
	ViewData["Title"] = "Cadastrar Cliente";
}
<div class="container mt-4">
    <h1 class="mb-4">Cadastrar Novo Cliente</h1>
    <p>Preencha os dados do cliente para cadastro no sistema.</p>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Cliente.Nome"></label>
                    <input asp-for="Cliente.Nome" class="form-control" />
                    <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Cliente.Email"></label>
                    <input asp-for="Cliente.Email" class="form-control" type="email" />
                    <span asp-validation-for="Cliente.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Cadastrar Cliente</button>
                <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }